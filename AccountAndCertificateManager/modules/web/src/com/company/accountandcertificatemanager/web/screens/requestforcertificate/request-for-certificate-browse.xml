<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://requestForCertificateBrowse.caption"
        focusComponent="requestForCertificatesTable"
        messagesPack="com.company.accountandcertificatemanager.web.screens.requestforcertificate">
    <data readOnly="true">
        <collection id="requestForCertificatesDc"
                    class="com.company.accountandcertificatemanager.entity.RequestForCertificate">
            <view extends="_local">
                <property name="user" view="_minimal">
                    <property name="firstName"/>
                    <property name="lastName"/>
                    <property name="middleName"/>
                    <property name="email"/>
                </property>
            </view>
            <loader id="requestForCertificatesDl">
                <query>
                    <![CDATA[select e from accountandcertificatemanager_RequestForCertificate e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="requestForCertificatesTable"
            spacing="true">
        <filter id="filter"
                applyTo="requestForCertificatesTable"
                dataLoader="requestForCertificatesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="requestForCertificatesTable"
                    width="100%"
                    dataContainer="requestForCertificatesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="user"/>
                <column id="email"/>
                <column id="resource"/>
                <column id="dateFrom"/>
                <column id="dateTo"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="requestForCertificatesTable.create"/>
                <button id="editBtn" action="requestForCertificatesTable.edit"/>
                <button id="removeBtn" action="requestForCertificatesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
