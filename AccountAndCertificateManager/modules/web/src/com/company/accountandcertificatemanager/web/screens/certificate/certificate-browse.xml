<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://certificateBrowse.caption"
        focusComponent="certificatesTable"
        messagesPack="com.company.accountandcertificatemanager.web.screens.certificate">
    <data readOnly="true">
        <collection id="certificatesDc"
                    class="com.company.accountandcertificatemanager.entity.Certificate">
            <view extends="_local">
                <property name="user" view="_minimal">
                    <property name="firstName"/>
                    <property name="lastName"/>
                    <property name="middleName"/>
                    <property name="email"/>
                </property>
            </view>
            <loader id="certificatesDl">
                <query>
                    <![CDATA[select e from accountandcertificatemanager_Certificate e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="certificatesTable"
            spacing="true">
        <filter id="filter"
                applyTo="certificatesTable"
                dataLoader="certificatesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="certificatesTable"
                    width="100%"
                    dataContainer="certificatesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="user"/>
                <column id="email"/>
                <column id="resource"/>
                <column id="dateFrom"/>
                <column id="dateTo"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="certificatesTable.create"/>
                <button id="editBtn" action="certificatesTable.edit"/>
                <button id="removeBtn" action="certificatesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
