<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://certificateEdit.caption"
        focusComponent="form"
        messagesPack="com.company.accountandcertificatemanager.web.screens.certificate">
    <data>
        <instance id="certificateDc"
                  class="com.company.accountandcertificatemanager.entity.Certificate">
            <view extends="_local">
                <property name="user" view="_minimal"/>
                <property name="endDate"/>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="certificateDc">
            <column width="350px">
                <pickerField id="userField" property="user">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <textField id="durationDaysField" property="durationDays"/>
                <dateField id="endDateField" property="endDate"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
        <button id="emailBtn"
                caption="Send email"/>
    </layout>
</window>
